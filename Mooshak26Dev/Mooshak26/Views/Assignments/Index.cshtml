@model IEnumerable<Mooshak26.Models.Entities.Assignment>

@{
    ViewBag.Title = "Index";
}

<h2>Assignments in course</h2>

<p>
    @Html.ActionLink("Create New Assignment", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.totalGrade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.timeSubmitted)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dueDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>

        <td>
            @Html.DisplayFor(modelItem => item.title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.totalGrade)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.timeSubmitted)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dueDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("See Milestones", "Index", "Milestones", new { id = item.id }, null) |
            @Html.ActionLink("Create Milestone", "Create", "Milestones", new { assignmentID = item.id }, null) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
