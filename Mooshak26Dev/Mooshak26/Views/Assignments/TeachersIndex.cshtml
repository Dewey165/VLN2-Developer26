@model IEnumerable<Mooshak26.Models.Entities.Assignment>

@{
    ViewBag.Title = "TeachersIndex";
}

<h2>Assignments in course</h2>

<p>
    @Html.ActionLink("Create New Assignment", "Create")
</p>
<table class="table">
    <tr>
        <th>
           Assignment
        </th>
        <th>
            Description
        </th>
        <th>
            Total grade
        </th>
        <th>
            Time submitted
        </th>
        <th>
            Due date
        </th>
        <th>
            Actions
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.totalGrade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.timeSubmitted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dueDate)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                @Html.ActionLink("See Milestones", "Index", "Milestones", new { id = item.id }, null) |
                @Html.ActionLink("Create Milestone", "Create", "Milestones", new { assignmentID = item.id }, null) |
                @Html.ActionLink("Delete", "Delete", new { id = item.id })
            </td>
        </tr>
    }

</table>
@Html.ActionLink("Go Back", "Index", new { controller = "Courses" }, new { @class = "btn btn-default" })