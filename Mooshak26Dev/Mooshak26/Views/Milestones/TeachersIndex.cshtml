@model IEnumerable<Mooshak26.Models.Entities.Milestone>

@{
    ViewBag.Title = "Index";
}

<h2>Milestone in Assignment</h2>

<table class="table">
    <tr>
        <th>
            Assignment name
        </th>
        <th>
            Description
        </th>
        <th>
            Grade 
        </th>
        <th>
            Actions
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.grade)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.id }) |
                @Html.ActionLink("See Solutions", "GoToSolution", new { id = item.id })
            </td>
        </tr>
    }

</table>

@Html.ActionLink("Go Back", "Index", new { controller = "Courses" }, new { @class = "btn btn-default" })