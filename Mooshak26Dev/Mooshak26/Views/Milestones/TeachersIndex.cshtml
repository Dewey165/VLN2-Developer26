@model IEnumerable<Mooshak26.Models.Entities.Milestone>

@{
    ViewBag.Title = "Index";
}

<h2>Milestones in Assignment</h2>
<div>
    <table class="table">
        <tr>
            <th>
                Assignment name
            </th>
            <th>
                Description
            </th>
            <th>
                Grade
            </th>
            <th>
                Actions
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.grade)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.id }) |
                    @Html.ActionLink("See Students' Solutions", "ViewSolutionsOf",  new { id = item.id }) |
                    @Html.ActionLink("Create New Solution", "Create", "Solutions", new { id = item.id }, null) |
                    @Html.ActionLink("See Submissions", "Index", new { id = item.id }) 
                </td>
            </tr>
        }

    </table>

   @Html.ActionLink("Go Back", "Index", new { controller = "Assignments", id = Model.ElementAt(0).assignmentID }, new { @class = "btn btn-default" })
</div>